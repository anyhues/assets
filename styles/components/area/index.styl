@require '../markdown'

.area
  margin 6rem 0

  container()

  &:first-of-type
    margin-top 0

  @extend .markdown

  +up-to(bp-small)
    margin 2rem 0

    h2
      font-size 6vw
      margin-bottom .5em

    h3
      font-size 6vw

    h4
      font-size 5vw

    li, p
      font-size 4vw
      line-height 1.6
