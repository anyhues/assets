.sub-header
  padding-left 1.5rem
  padding-right 1.5rem
  margin 0 auto

  +from(bp-medium)
    width 90%

  +from(bp-large)
    width 90%
    padding 3.5rem

.image-teaser
  // min-height 400px
  min-width 100%
  position relative
  // height 600px
  overflow hidden

  img
    max-width 100%

  .central-teaser
    width 50%
    position absolute
    top 50%
    left 3%
    transform translateY(-50%)
    color #fff
    z-index 1000

    h1
      // text-align center
      font-family modern_sansregular, 'Helvetica Neue', Helvetica, Arial, sans-serif
      font-size 4rem
      letter-spacing .3rem

    p.sub-title
      margin-top .5rem
      font-family JaapokkiRegular, 'Helvetica Neue', Helvetica, Arial, sans-serif
      font-size 1.5rem
      // text-align center
      // background-color rgba(37, 37, 37, 0.66)

+up-to(bp-medium)
  .image-teaser
    .central-teaser
      width 70%

      h1
        font-size 5vw

      p.sub-title
        display none
        // font-size 3vw

+between(bp-medium, bp-large)
  .image-teaser
    .central-teaser
      h1
        font-size 4vw

      p.sub-title
        font-size 2vw
