@require '../markdown'

about-me-bg = #212d28

.about-me-wrapper
  padding-top 4rem

.about-me
  min-height 300px
  position relative
  padding 7rem 2rem
  color #fff
  margin-top 5rem
  background-color about-me-bg
  background-image url(../images/blurred-bg.png)
  background-size 100%

  +from(bp-medium)
    padding 7rem 5rem

  @extend .markdown

  h2
    font-size 1.5rem
    text-transform uppercase
    font-family modern_sansregular, 'Helvetica Neue', Helvetica, Arial, sans-serif
    border-bottom 2px solid #fff

  .avatar
    width 200px
    height 200px
    position absolute
    top 0
    left 50%
    transform translate(-50%, -50%)
    background-image url(../images/joaquin.jpg)
    background-size cover
    background-position center center
    border-radius 100%
    border 10px solid #fff
