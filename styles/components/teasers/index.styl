@require 'teaser.styl'

.teasers
  container()
  overflow hidden
  clear-fix()

  li
    margin-bottom 1rem

  +from(bp-medium)
    li
      float left

  +up-to(bp-medium)
    margin-bottom 1.5rem

  +between(bp-medium, bp-large)
    &.teaser-count-2, &.teaser-count-3, &.teaser-count-4
      li

        margin-bottom 1rem
        width 48%
        margin-right 3.9%

        &:nth-child(even)
          margin-right 0
          clear-fix()

    &.teaser-count-3 li:last-of-type
      transform translateX(50%)

  +from(bp-large)
    li
      margin-bottom 0

    &.teaser-count-2 li
      width 48%
      margin-right 1.9%

      &:last-of-type
        margin-right 0

    &.teaser-count-3 li
      width 31%
      margin-right 3.45%

      &:last-of-type
        margin-right 0

    &.teaser-count-4 li
      width 23%
      margin-right 2.66%

      &:last-of-type
        margin-right 0
