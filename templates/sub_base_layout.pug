extends /base_layout

block body
  header.sub-header
    nav.main-nav
      .title-brand
        a(href=HOME_HOST) Andreas Niehues
      include meta_nav

    .image-teaser
      block image-teaser
        picture
          source(srcset=ASSET_HOST + "/images/landing-page-half-bg-1380.png" media="(min-width: 1200px)")
          source(srcset=ASSET_HOST + "/images/landing-page-half-bg-1024.png" media="(min-width: 640px)")
          img(src=ASSET_HOST + "/images/landing-page-bg-640.png" alt="")

      block central-teaser
        .central-teaser
          h1.sub-layout-main-brand Andreas Niehues
          p.sub-title Systemisch integrative Praxis für <span class="together">Paar- und Familientherapie</span>, <span class="together">Coaching und psychologische Beratung</span>, <span class="together">Sexualberatung und Sexualpädagogik</span>

  section.content
    include meta_nav

    block content
    block shared_content
