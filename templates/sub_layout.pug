extends /base_layout

block body
  header.sub-header
    nav.main-nav
      .title-brand Andreas Niehues
      include meta_nav

    .image-teaser
      div.overlay

      block image-teaser
        picture
          source(srcset=ASSET_HOST + "/images/couples-bg-1380.png" media="(min-width: 1200px)")
          source(srcset=ASSET_HOST + "/images/couples-bg-1024.png" media="(min-width: 640px)")
          img(src=ASSET_HOST + "/images/couples-bg-640.png" alt="")

      .central-teaser
        block central-teaser
          h1 Paartherapie
          p.sub-title Systemisch integrative Praxis für Paar- und Familientherapie, Coaching und psychologische Beratung, Sexualberatung und Sexualpädagogik

  section.content
    include meta_nav

    block content
