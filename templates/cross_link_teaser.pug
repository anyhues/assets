mixin teaser(klass, label, link)
  li(class="teaser teaser-" + klass)
    a(href=link)
      .img-container
      span.label
        span.text= label
        button.more.icon.ion-home Mehr Informationen


mixin teaser-list(teasers)
  ul(class="teasers teaser-count-" + teasers.length)
    each teaser in teasers
      case teaser
        when 'couples'
          +teaser(teaser, 'Paartherapie', '#')
        when 'family'
          +teaser(teaser, 'Familientherapie', '#')
        when 'single'
          +teaser(teaser, 'Einzeltherapie', '#')
        when 'corporations'
          +teaser(teaser, 'Coaching', '#')
